<img src='{{data.team.crestUrl}}' alt='{{data.team.name}}-logo' class='team-logo' />

<h1 class='team-information-name'> {{data.team.name}} </h1>

<div class='team-information-container'>
  <h2>Short Name</h2>
  <p>{{data.team.shortName}}</p>
</div>

<div class='team-information-container'>
  <h2>TLA</h2>
  <p>{{data.team.tla}}</p>
</div>

<div class='team-information-container'>
  <h2>Country</h2>
  <p>{{data.team.area.name}}</p>
</div>

<div class='team-information-container'>
  <h2>Founded</h2>
  <p>{{data.team.founded}}</p>
</div>

<div class='team-information-container'>
  <h2>Stadium Name</h2>
  <p>{{data.team.venue}}</p>
</div>

<div class='team-information-container'>
  <h2>Club Colors</h2>
  <p>{{data.team.clubColors}}</p>
</div>

<div class='team-information-container'>
  <h2>Website</h2>
  <p><a href='{{data.team.website}}' target='_blank'>{{data.team.website}}</a></p>
</div>

<div class='team-information-container'>
  <h2>Email</h2>
  <p>{{data.team.email}}</p>
</div>

<div class='team-information-container'>
  <h2>Phone</h2>
  <p>{{data.team.phone}}</p>
</div>

<div class='team-information-container'>
  <h2>Address</h2>
  <p>{{data.team.address}}</p>
</div>

<div id='map'>
  <iframe
    width='300'
    height='300'
    style='border:0'
    loading='lazy'
    allowfullscreen=''
    src='https://www.google.com/maps/embed/v1/place?key={{data.API_KEY}}&q={{data.editAddress}}'
  >
  </iframe>
</div>

<div class='btn-information-container'>
  <button type='button' class='btn add-save-send-team width-40 btn-padding-4'><a
      class='link-watch'
      href='/team/{{data.team.id}}/edit'
    >Edit</a></button>
  <button type='button' class='btn btn-delete width-40 btn-padding-4'><a
      class='link-watch'
      href='/team/{{data.team.id}}/delete'
    >Delete</a></button>
</div>